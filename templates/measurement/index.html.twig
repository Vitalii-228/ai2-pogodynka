{% extends 'base.html.twig' %}

{% block title %}Weather index{% endblock %}

{% block body %}
    <h1>Weather index</h1>

    {%if is_granted('ROLE_LOCATION_INDEX')%}
        <div>
            <a href="http://localhost:53733/location" class="btn btn-primary">Location</a>
        </div>
    {% endif %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Temperature</th>
                <th>Humidity</th>
                <th>Wind</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for weather in weather %}
            <tr>
                <td>{{ weather.id }}</td>
                <td>{{ weather.date ? weather.date|date('Y-m-d') : '' }}</td>
                <td>{{ weather.temperature }}</td>
                <td>{{ weather.humidity }}</td>
                <td>{{ weather.wind }}</td>
                <td>
                    {%if is_granted('ROLE_MEASUREMENT_SHOW')%}
                        <a href="{{ path('app_measurement_show', {'id': weather.id}) }}">show</a>
                    {% endif %}

                    {%if is_granted('ROLE_MEASUREMENT_EDIT')%}
                        <a href="{{ path('app_measurement_edit', {'id': weather.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {%if is_granted('ROLE_MEASUREMENT_NEW')%}
        <a href="{{ path('app_measurement_new') }}">Create new</a>
    {% endif %}
{% endblock %}
